%h1 #{quiz.title} (#{quiz_submission.formatted_grade})

%ol
  - quiz_submission.question_answers.each do |answer|
    %li
      %p= answer.question.question
      %dl
        %dt Your Answer:
        %dd #{format_answer(answer.answer)}
        - if quiz_submission.graded?
          %dt Correct Answer:
          %dd #{format_answer(answer.question.correct_answer)}
          %dt Score:
          %dd #{answer.correct? ? "Correct" : "Incorrect"}
